<div class="form-group">
    <label for="title">Title</label>
    <input type="text" required value="<%= article.title%>" name="title" id="title" class="form-control">

</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description%></textarea>

</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>

</div>
<a href="/articles/" class="btn btn-secondary mr-3 ml-3 mt-4">Cancel</a>
<button type="submit" class=" btn btn-primary mr-3 ml-3 mt-4"> Save</button>